<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-funcionarios-table" author="system">
        <createTable tableName="funcionarios">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="senha" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="dt_criacao" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="dt_atualizacao" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_funcionarios_email" tableName="funcionarios">
            <column name="email"/>
        </createIndex>
        
        <createIndex indexName="idx_funcionarios_ativo" tableName="funcionarios">
            <column name="ativo"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-perfil-table" author="system">
        <createTable tableName="perfil">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dt_criacao" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-funcionario-perfil-table" author="system">
        <createTable tableName="funcionario_perfil">
            <column name="funcionario_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="perfil_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="funcionario_perfil" 
                       columnNames="funcionario_id, perfil_id"/>
        
        <addForeignKeyConstraint baseTableName="funcionario_perfil"
                                 baseColumnNames="funcionario_id"
                                 constraintName="fk_funcionario_perfil_funcionario"
                                 referencedTableName="funcionarios"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        
        <addForeignKeyConstraint baseTableName="funcionario_perfil"
                                 baseColumnNames="perfil_id"
                                 constraintName="fk_funcionario_perfil_perfil"
                                 referencedTableName="perfil"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="004-insert-default-perfis" author="system">
        <insert tableName="perfil">
            <column name="nome" value="ADMIN"/>
        </insert>
        <insert tableName="perfil">
            <column name="nome" value="GERENTE"/>
        </insert>
        <insert tableName="perfil">
            <column name="nome" value="VENDEDOR"/>
        </insert>
    </changeSet>

    <changeSet id="005-insert-admin-user" author="system">
        <insert tableName="funcionarios">
            <column name="nome" value="Administrador"/>
            <column name="email" value="admin@bahiabrindes.com"/>
            <!-- Senha: admin123 (BCrypt hash) -->
            <column name="senha" value="$2a$10$N9qo8uLOickgx2ZMRZoMyeIjZAgcfl7p92ldGxad68LJZdL17lhWy"/>
            <column name="ativo" valueBoolean="true"/>
        </insert>
        
        <!-- Associar admin ao perfil ADMIN -->
        <insert tableName="funcionario_perfil">
            <column name="funcionario_id" valueComputed="(SELECT id FROM funcionarios WHERE email = 'admin@bahiabrindes.com')"/>
            <column name="perfil_id" valueComputed="(SELECT id FROM perfil WHERE nome = 'ADMIN')"/>
        </insert>
    </changeSet>

</databaseChangeLog>
