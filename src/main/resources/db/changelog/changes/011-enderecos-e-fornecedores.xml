<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="035-create-enderecos-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="enderecos"/>
            </not>
        </preConditions>

        <createTable tableName="enderecos">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rua" type="VARCHAR(255)"/>
            <column name="numero" type="VARCHAR(50)"/>
            <column name="cep" type="VARCHAR(20)"/>
            <column name="cidade" type="VARCHAR(255)"/>
            <column name="estado" type="VARCHAR(2)"/>
        </createTable>
    </changeSet>

    <changeSet id="036-add-endereco-id-to-fornecedores" author="system">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="fornecedores"/>
                <not>
                    <columnExists tableName="fornecedores" columnName="endereco_id"/>
                </not>
            </and>
        </preConditions>

        <addColumn tableName="fornecedores">
            <column name="endereco_id" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="fornecedores"
                                 baseColumnNames="endereco_id"
                                 constraintName="fk_fornecedores_enderecos"
                                 referencedTableName="enderecos"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>

        <createIndex indexName="uk_fornecedores_endereco_id" tableName="fornecedores" unique="true">
            <column name="endereco_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="037-add-condicoes-pagamento-and-observacoes-to-fornecedores" author="system">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="fornecedores"/>
                <not>
                    <columnExists tableName="fornecedores" columnName="condicoes_pagamento"/>
                </not>
            </and>
        </preConditions>

        <addColumn tableName="fornecedores">
            <column name="condicoes_pagamento" type="VARCHAR(255)"/>
            <column name="observacoes" type="TEXT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>

